{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOMContentLoadable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* JSX and React Configuration */
    "jsx": "react-jsx", // Usa o transform JSX moderno do React (necessário para o Vite)
    
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": false, // <-- A CORREÇÃO: Desativa a verificação estrita que causa o TS6133
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
